{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "core",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "isolatedModules": false,
    "preserveConstEnums": true,
    "removeComments": true,
  },

  "include": [
    "node_modules/@speechly/browser-client/src/**/*",
    "src/**/*",
  ],
  "exclude": ["node_modules/@speechly/browser-client/src/**/*.test.ts"],
}
